{
  "main": "electron/main.js",
  "scripts": {
  "dev": "vite",
  "start": "electron .",
  "dev:all": "concurrently -k \"vite\" \"cross-env NODE_ENV=development electron .\""
  },
  "build": {
    "appId": "com.fencing.tournament",
    "productName": "FencingTourney",
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "files": [
      "dist",
      "electron"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "papaparse": "^5.5.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3"
  }
}
