{
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"cross-env VITE_DEV_SERVER_URL=http://localhost:5173 vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build && electron-builder -c",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.fencing.tournament",
    "productName": "FencingTourney",
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "files": [
      "dist",
      "electron"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    }
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "antd": "^5.27.6",
    "d3": "^7.9.0",
    "papaparse": "^5.5.3",
    "react": "^19.1.0",
    "react-brackets": "^0.4.7",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.6.3",
    "react-svg-pan-zoom": "^3.13.1",
    "react-tournament-brackets": "^1.0.41",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "better-sqlite3": "^12.2.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "vite": "^7.0.4",
    "wait-on": "^8.0.4"
  }
}
